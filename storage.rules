rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function: Kullanıcı authenticated mi?
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ========== Instagram Thumbnails ==========
    match /instagram-thumbnails/{allPaths=**} {
      // Herkes okuyabilir (public access - medya sayfası için)
      allow read: if true;
      
      // Sadece admin yazabilir
      allow write: if isAuthenticated();
      
      // Dosya boyutu kontrolü (max 10MB)
      allow create: if isAuthenticated() 
                    && request.resource.size < 10 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
    
    // ========== Medya Galerisi - Fotoğraflar ==========
    match /media/photos/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
      
      // Fotoğraflar için 50MB limit
      allow create: if isAuthenticated()
                    && request.resource.size < 50 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
    
    // ========== Medya Galerisi - Videolar ==========
    match /media/videos/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
      
      // Videolar için 100MB limit
      allow create: if isAuthenticated()
                    && request.resource.size < 100 * 1024 * 1024
                    && request.resource.contentType.matches('video/.*');
    }
    
    // ========== Genel ==========
    // Diğer tüm dosyalar için erişimi kapat
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

