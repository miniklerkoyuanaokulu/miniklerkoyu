rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ========== Instagram Thumbnails ==========
    match /instagram-thumbnails/{allPaths=**} {
      // Herkes okuyabilir (public access - medya sayfası için)
      allow read: if true;
      
      // Sadece giriş yapmış kullanıcılar yazabilir (admin)
      // TODO: Auth kurulunca güvenlik için: if request.auth != null
      allow write: if true; // GEÇICI: Auth olmadan da yazılabilir
      
      // Dosya boyutu kontrolü (max 10MB)
      allow create: if request.resource.size < 10 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
    
    // ========== Medya Galerisi ==========
    match /media/{type}/{allPaths=**} {
      // type: photos, videos, press
      allow read: if true;
      allow write: if true; // GEÇICI
      
      // Dosya kontrolü
      // Videolar için 100MB, diğerleri için 50MB
      allow create: if request.resource.size < 100 * 1024 * 1024; // max 100MB
    }
    
    // ========== Genel ==========
    // Diğer tüm dosyalar için varsayılan
    match /{allPaths=**} {
      allow read: if true;
      allow write: if true; // GEÇICI: Auth sistemi kurulana kadar
    }
  }
}

